.title-container {
  display: flex;
  align-items: center;
  position: relative;
}

.capsule {
  margin-left: 10px;
  height: 32px;
  /*border: 1px solid #ff0;*/
  border-radius: 16px;
  display: flex;
  align-items: center;
}

.capsule > view {
  width: 32px;
  height: 60%;
  position: relative;
}

.capsule > view:nth-child(2) {
  border-left: 1px solid #777;
}

.capsule image {
  width: 60%;
  height: 100%;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
  display: inline-block;
}
.capsule .calendar{
  width: 60%;
  height: 100%;
  position: absolute;
  left: 100rpx;
  top: 50%;
  transform: translate(-50%,-50%);
  display: inline-block;
}

