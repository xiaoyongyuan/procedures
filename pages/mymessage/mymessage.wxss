@import "../ydmessage/ydmessage.wxss";
page{
    line-height: 1.6;
    font-family: -apple-system-font, "Helvetica Neue", sans-serif;
    height: 100%;
}
.page{
    height: 100%;
    background-color: #e7e7e7;
}
.title{
    width: 100%;
    height: 45px;
    background-size: 100% 100%;
    background-repeat: no-repeat;
    z-index: 9000;
}

.gray{
    width: 100%;
    height: 110rpx;
    background-color: #e7e7e7;
    z-index: 9000;
}
.title-image{
    width: 100%;
    height: 100%;
    z-index: 9000;
}
.topcenterout{
    width: 100%;
    height: auto;
    display: flex;
    justify-content: center;
}
.topcenter{
    width: 90%;
    height: 172rpx;
    background-color: white;
    border-radius: 24rpx;
    margin: auto;
    z-index: 9000;
    position: fixed;
}
.topcenterT{
    width: 100%;
    height: 75%;
    display: flex;
    align-items: center;
    justify-content: space-around;
}
.topcenterTone{
    width: 80rpx;
    height: 80rpx;
}
.topcenterTone image{
    width: 100%;
    height: 100%;
}
.topcenterB{
    width: 100%;
    height: 25%;
    display: flex;
    justify-content: space-around;
}
.topcenterBone{
    width: 120rpx;
    height: 30rpx;
    font-size: 26rpx;
    display: flex;
    justify-content: center;
    margin-top: -20rpx;
    font-weight: bold;
}
.first-top{
    width: 100%;
    height: 100rpx;
    background-color: #e7e7e7;
    z-index: 9999;
    position: fixed;
}

.first-boot{
    width: 100%;
    height: 15rpx;
    background-color: #e7e7e7;
    z-index: 9000;
}
.message-one{
    width: 100%;
    height: 140rpx;
    background-color: white;
    margin-top: 1px;
    display: flex;
    align-items: center;
}
.zhanweione{
    background-color: #e7e7e7;
}
.message-one-icon{
    width: 90rpx;
    height: 90rpx;
    margin-left: 40rpx;
    position: relative;
    z-index: 1;
}
.message-one-icon image{
    width: 100%;
    height: 100%;
}
.message-one-center{
    width: 40%;
    height: 90rpx;
    margin-left: 20rpx;
}
.message-one-center-T{
    width: 100%;
    height: 60%;
    font-size: 26rpx;
    display: flex;
    align-items: center;
    font-weight: bold;
}
.message-one-center-T text{
    margin-top: -30rpx;
    display: flex;
    align-items: center;
}
.message-one-center-B{
    width: 100%;
    height: 40%;
    display: flex;
    align-items: center;
    font-size: 24rpx;
    color: #aaa;
}
.message-right{
    width: auto;
    height: 90rpx;
    display: flex;
    align-items: flex-start;
    position: absolute;
    right: 40rpx;
}
.time{
    font-size: 22rpx;
    color: #aaa;

}
.read{
    width: 20rpx;
    height: 20rpx;
    border-radius: 50%;
    background-color: #df1737;
    position: absolute;
    top: -10rpx;
    right: -10rpx;
}
.mask{
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    z-index: 9997;
    opacity: 0.7;
}
.detailpic{
    width: 90%;
    height: 500rpx;
    background-color: #e7e7e7;
    border-radius: 26rpx;
    position: fixed;
    top: 400rpx;
    z-index: 9998;

}

.detailpic-T{
    width: 100%;
    height: 85%;
    background-color: white;
    border-top-left-radius: 24rpx;
    border-top-right-radius: 24rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}
.detailpic-B{
    width: 100%;
    height: 15%;
    border-top: 1px solid #e7e7e7;
    background-color: white;
    border-bottom-right-radius: 24rpx;
    border-bottom-left-radius: 24rpx;
    display: flex;
}
.detailpic-BL{
    width: 50%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 26rpx;
}
.detailpic-BR{
    width: 50%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 26rpx;
    color: #5387c2;
}

.detailpic-T-image{
    width: 80%;
    height: 90%;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 24rpx;
}
.detailpic-T-image image{
    width: 100%;
    height: 100%;
    z-index: 9999;
}