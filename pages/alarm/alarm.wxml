<!--pages/alarm/alarm.wxml-->
<view class="page">
    <navbar back text="{{navigationBarTitle}}"></navbar>
    <view class="mask" catchtouchmove="preventTouchMove" wx:if="{{showModal}}" bindtap="go"></view>

    <view class="select-list">
        <view class='list-msg2' bindtap='bindShowMsg' style="position:absolute;top:{{ someData.statusBarHeight+someData.titleBarHeight+10 }}px">
            <text>{{tihuoWay}}</text>
            <image style='height:24rpx;width:40rpx;' src='/images/below.png'></image>
        </view>
    </view>

    <view class="top" style="height: {{ someData.statusBarHeight+someData.titleBarHeight +40 }}px">
        <!--占位view-->
    </view>

    <!--<input class="weui-input" placeholder="请输入设备ID" value="{{ scanresult }}" />-->

    <view class='list-li mflex'  wx:for="{{alarmListData}}"  wx:key="index" >
        <view class="alarm-list">
            <view class="alarm-list-one">
                <view class="alarm-list-one-top" bindtap="changeToalarmdetail">
                    <view class="alarm-list-one-top-left">
                        <view class="alarm-list-one-top-left-bac">
                            <view class="alarm-list-one-top-img">
                                <image src='{{ item.imgUrl }}'></image>
                            </view>
                        </view>
                    </view>
                    <view class="alarm-list-one-top-right">
                        <view class="alarm-list-one-top-right-T">
                            <text>报警类型:{{ item.alarmtype }}</text>
                        </view>
                        <view class="alarm-list-one-top-right-B">
                            <text>报警时间:{{ item.alarmtime }}</text>
                        </view>
                    </view>
                </view>
                <view class="alarm-list-one-bottom">
                    <view class="alarm-list-one-bottom-left">
                        <text>设备:{{ item.equip }}</text>
                    </view>
                    <view class="alarm-list-one-bottom-right">
                        <text>报警对象:{{ item.alarmobj }}</text>
                    </view>
                </view>
            </view>
        </view>
    </view>

    <!-- 下拉需要显示的列表 -->
    <view class="select_box_center">
        <view class="select_box" wx:if="{{showModal}}" bindtap="go" style="position:absolute;top:{{ someData.statusBarHeight+someData.titleBarHeight+41 }}px">
            <view class="select_one" bindtap="mySelect" data-name="全部"><text>全部</text></view>
            <view class="select_one" bindtap="mySelect" data-name="收藏列表"><text>收藏列表</text></view>
            <view class="select_one" bindtap="mySelect" data-name="测试一"><text>测试一</text></view>
            <view class="select_one" bindtap="mySelect" data-name="yy"><text>yy</text></view>
            <view class="select_one" bindtap="mySelect" data-name="60"><text>60</text></view>
            <view class="select_one" bindtap="mySelect" data-name="西安"><text>西安</text></view>
        </view>
    </view>
</view>