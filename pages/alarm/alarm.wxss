/* pages/alarm/alarm.wxss */
@import "/utils/common.wxss";
page {
    line-height: 1.6;
    font-family: -apple-system-font, "Helvetica Neue", sans-serif;
    height: 100%;
}
.page{
    min-height: 100%;
    background-color: #e7e7e7;
}
.list-msg {
    padding: 0 20rpx;
    background-color: #fff;
    position: relative;
}
.weui-input{
    display: none;
    width: 85%;
    border: 1px solid #f00;
}
.list-msg1 {
    height: 60rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.select-list{
    display: flex;
    justify-content: center;
    position: relative;
    z-index: 9999;
    width: 100%;
    height: 100rpx;
    border: 1px solid #2cd7aa;
}
/*.list-msg2-count{*/
    /*width: 100%;*/
    /*display: flex;*/
    /*justify-content: center;*/
/*}*/
.apptime{
    display: flex;
    width: 90%;
    height: 70rpx;
    line-height: 70rpx;
}
.apptime text{
    font-size: 22rpx;
    color: #00a0e9;
}
.float2{
    display: flex;
    justify-content: center;
    width: 100%;
    height: 160rpx;
    background-color: #e7e7e7;
}
.btn{
    background-color: #145bab;
    z-index: 9999;
    width: 160rpx;
    height: 50rpx;
    line-height: 50rpx;
    float: right;
    color: white;
    border-radius: 6rpx;
    font-size: 24rpx;
    position: absolute;
    top: 10rpx;
    right: 0;
    display: flex;
    justify-content: center;
}
.select-list2{
    display: flex;
    justify-content: center;
    position: relative;
    z-index: 9999;
    width: 100%;
    height: 160rpx;
    border: 1px solid #2cd7aa;
}
.test{
    width: 90%;
    height: 60rpx;
    background-color: orange;
}
.list-msg2 {
    height: 60rpx;
    display: flex;
    z-index: 9998;
    align-items: center;
    justify-content: space-between;
    padding: 0 10rpx;
    background-color: #fff;
    width: 90%;
    border-radius: 16rpx;
    position: fixed;
}
.nodata{
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 100%;
    width: 100%;
    position: fixed;
    top: 50%;
}
.nodata-one{
    display: flex;
    justify-content: center;
    margin-top: 40rpx;
    font-size: 30rpx;
}
.list-msg2 text{
    font-size: 28rpx;
}
.select_box_center{
    display: flex;
    justify-content: center;
}

.select_box {
    background-color: #fff;
    padding: 0 10rpx;
    width: 92%;
    overflow: hidden;
    font-size: 28rpx;
    border-radius: 24rpx;
    z-index: 9999;
}

@keyframes myfirst {
    from {
        height: 0rpx;
    }

    to {
        height: 210rpx;
    }
}

.select_one {
    height: 60rpx;
    line-height: 60rpx;
    border-bottom: 2rpx solid #ebebeb;
    margin-top: 20rpx;
    display: flex;
    justify-content: space-between;
}
.select_one image{
    height:30rpx;
    width:40rpx;
    margin-right: 80rpx;
}
.select_one text{
    margin-left: 20rpx;
}
.mask{
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #909090;
    z-index: 9000;
    opacity: 0.7;
}

.alarm-list-one{
    justify-content: center;
    width: 100%;
    height: 240rpx;
    /*margin-top: 20rpx;*/
}
.alarm-list-one-top{
    display: flex;
    height: 75%;
    width: 90%;
    /*background-color: #00a0e9;*/
    border-radius: 16rpx;
    margin: auto;
}
.alarm-list-one-bottom{
    display: flex;
    margin: auto;
    height: 25%;
    background-color: #f4f4f4;
    width: 80%;
    border-bottom-left-radius: 16rpx;
    border-bottom-right-radius: 16rpx;
    font-size: 28rpx;
}
.alarm-list-one-bottom-left{
    width: 50%;
    height: 100%;
    align-items: center;
    display: flex;
}
.alarm-list-one-bottom-right{
    width: 50%;
    height: 100%;
    align-items: center;
    display: flex;
}
.alarm-list-one-bottom text{
    flex-direction: column;
    align-items:center;
    margin-left: 40rpx;
}
.alarm-list-one-top-left{

    width: 37%;
    height: 100%;
}
.alarm-list-one-top-right{
    border-radius: 0 16rpx 16rpx 0;
    background-color: white;
    width: 63%;
    height: 100%;
}
.alarm-list-one-top-right text{
    margin-left: 20rpx;
}
.alarm-list-one-top-right-T{
    font-weight: bold;
    align-items: center;
    display: flex;
    height: 50%;
    font-size: 32rpx;
    position: relative;
}
.on-off-line{
    width: 60rpx;
    height: 40rpx;
    position: absolute;
    right: 0px;
    margin-top: -22rpx;
    /*background-color: #2cd7aa;*/
    display: flex;
}
.on-off-line-circle{
    width: 40rpx;
    height: 40rpx;
    border-radius: 50%;
    /*background-color: #2cd7aa;*/
    margin-left: -20rpx;
}
.on-off-line text{
    font-weight: normal;
    font-size: 24rpx;
    color: white;
    margin-left: -20rpx;
}
.alarm-list-one-top-right-B{
    align-items: center;
    display: flex;
    font-size: 24rpx;
    height: 50%;
}
.alarm-list-one-top-img{
    width: 94%;
    height: 80%;
    margin: auto;
}
.alarm-list-one-top-left-bac{
    background-color: white;
    height: 100%;
    width: 96%;
    float: right;
    display: flex;
    align-items: center;
}
.alarm-list-one-top-left-bac image{
    width: 100%;
    height: 100%;
}
.alarm-list{
    display: flex;
    justify-content: center;
}






