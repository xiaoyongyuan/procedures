/* pages/alarm/alarm.wxss */
page {
    line-height: 1.6;
    font-family: -apple-system-font, "Helvetica Neue", sans-serif;
    height: 100%;
}
.page{
    min-height: 100%;
    background-color: #e7e7e7;
}
.list-msg {
    padding: 0 20rpx;
    background-color: #fff;
    position: relative;
}
.weui-input{
    /*display: none;*/
    width: 85%;
    border: 1px solid #f00;
}
.list-msg1 {
    height: 60rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.select-list{
    display: flex;
    justify-content: center;
    position: relative;
    z-index: 998;
}
.list-msg2 {
    height: 60rpx;
    display: flex;
    z-index: 9999;
    align-items: center;
    justify-content: space-between;
    padding: 0 10rpx;
    background-color: #fff;
    width: 90%;
    border-radius: 16rpx;
}
.list-msg2 text{
    font-size: 28rpx;
}
.select_box_center{
    display: flex;
    justify-content: center;
}

.select_box {
    background-color: #fff;
    padding: 0 10rpx;
    width: 92%;
    overflow: hidden;
    font-size: 28rpx;
    border-radius: 24rpx;
    z-index: 9999;
}

@keyframes myfirst {
    from {
        height: 0rpx;
    }

    to {
        height: 210rpx;
    }
}

.select_one {
    height: 60rpx;
    line-height: 60rpx;
    border-bottom: 2rpx solid #ebebeb;
    margin-top: 20rpx;
}
.select_one text{
    margin-left: 20rpx;
}
.mask{
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #909090;
    z-index: 9000;
    opacity: 0.7;
}

.alarm-list-one{
    justify-content: center;
    width: 100%;
    height: 240rpx;
    margin-top: 20rpx;
}
.alarm-list-one-top{
    display: flex;
    height: 75%;
    width: 90%;
    background-color: #00a0e9;
    border-radius: 16rpx;
    margin: auto;
}
.alarm-list-one-bottom{
    display: flex;
    margin: auto;
    height: 25%;
    background-color: #f4f4f4;
    width: 80%;
    border-bottom-left-radius: 16rpx;
    border-bottom-right-radius: 16rpx;
    font-size: 28rpx;
}
.alarm-list-one-bottom-left{
    width: 50%;
    height: 100%;
    align-items: center;
    display: flex;
}
.alarm-list-one-bottom-right{
    width: 50%;
    height: 100%;
    align-items: center;
    display: flex;
}
.alarm-list-one-bottom text{
    flex-direction: column;
    align-items:center;
    margin-left: 40rpx;
}
.alarm-list-one-top-left{

    width: 37%;
    height: 100%;
}
.alarm-list-one-top-right{
    border-radius: 0 16rpx 16rpx 0;
    background-color: white;
    width: 63%;
    height: 100%;
}
.alarm-list-one-top-right text{
    margin-left: 20rpx;
}
.alarm-list-one-top-right-T{
    font-weight: bold;
    align-items: center;
    display: flex;
    height: 50%;
    font-size: 32rpx;
}
.alarm-list-one-top-right-B{
    align-items: center;
    display: flex;
    font-size: 24rpx;
    height: 50%;
}
.alarm-list-one-top-img{
    width: 94%;
    height: 80%;
    margin: auto;
}
.alarm-list-one-top-left-bac{
    background-color: white;
    height: 100%;
    width: 96%;
    float: right;
    display: flex;
    align-items: center;
}
.alarm-list-one-top-left-bac image{
    width: 100%;
    height: 100%;
}
.alarm-list{
    display: flex;
    justify-content: center;
}