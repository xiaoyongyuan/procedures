@import "../equipdetail/equipdetail.wxss";
page {
    line-height: 1.6;
    font-family: -apple-system-font, "Helvetica Neue", sans-serif;
    height: 100%;
}
.page{
    height: 100%;
    background-color: white;
}
.count{
    width: 100%;
    height: 65%;
    display: flex;
    justify-content: center;
    align-items: flex-end;
}
.newaccount{
    width: 100%;
    height: 400rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}
.newaccount image{
    width: 60%;
    height: 100%;
}
.bigword-view{
    display: flex;
    justify-content: center;
    align-items: center;
}
.bigword{
    font-size: 32rpx;
    font-weight: bold;
    margin-top: 20rpx;
}
.bottom{
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
}
.smallword-view{
    width: 90%;
    margin-top: 40rpx;
}
.smallword{
    font-size: 24rpx;
}