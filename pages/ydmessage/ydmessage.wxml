<view class="page">
    <navbar back home text="{{navigationBarTitle}}"></navbar>
    <view style="height: {{ someData.statusBarHeight+someData.titleBarHeight }}px;">
        <!--占位1-->
    </view>
    <view class="weui-loadmore" wx:if='{{isRefreshing}}'>
        <view class="weui-loading"></view>
        <view class="weui-loadmore-tips">正在刷新...</view>
    </view>
    <view class="ydmessagelist-one" bindtap="openclose" wx:for="{{ ydmessage }}" wx:key="index" id='{{index}}'>
        <view class="ydmessagelist-T">
            <view class="ydmessagelist-T-icon">
                <image wx:if="{{ item.atype === 7001 }}" src="/images/fqyd.jpg"></image>
                <image wx:if="{{ item.atype === 7003 }}" src="/images/yidong.jpg"></image>
                <image wx:if="{{ item.atype === 7004 }}" src="/images/accountyd.jpg"></image>
                <image wx:if="{{ item.atype === 7006 }}" src="/images/accountyd.jpg"></image>
                <view class="read" style="display: {{ item.isshow }}" wx:if="{{ item.status === 0 }}"></view>
            </view>
            <view class="ydmessagelist-T-center">
                <view class="ydmessagelist-T-center-t" wx:if="{{ item.atype === 7001 }}">
                    防区异动
                </view>
                <view class="ydmessagelist-T-center-t" wx:elif="{{ item.atype === 7003 }}">
                    布防时间异动
                </view>
                <view class="ydmessagelist-T-center-t" wx:elif="{{ item.atype === 7004 }}">
                    布防方式设置异动
                </view>
                <view class="ydmessagelist-T-center-t" wx:elif="{{ item.atype === 7006 }}">
                    账户异动
                </view>
                <view class="ydmessagelist-T-center-b">
                    {{ item.atime }}
                </view>
            </view>
            <view class="ydmessagelist-T-right">
                <view class="upimage" wx:if="{{ item.messageopen == true }}">
                </view>
                <image src="/images/belowme.png" wx:if="{{ item.messageopen == false }}"></image>
            </view>
        </view>
        <view class="ydmessagelist-b" wx:if="{{ item.messageopen == true }}">
            <view class="textview">
                消息通知： {{ item.memo }}
            </view>
        </view>
    </view>
    <view class="loading" hidden="{{!searchLoading}}">正在载入更多...</view>
    <view class="loading complete"  hidden="{{!searchLoadingComplete}}">已加载全部</view>
    <view class="nomessage" wx:if="{{ nomessage }}">
        您目前还没有通知消息
    </view>

</view>