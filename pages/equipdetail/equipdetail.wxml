<!--pages/equipdetail/equipdetail.wxml-->
<view class="page">
    <navbar back home text="{{navigationBarTitle}}"></navbar>
    <view class="top" style="height: {{ someData.statusBarHeight+someData.titleBarHeight }}px">
        <!--占位view-->
    </view>
    <view class="topsetting">
        <view class="topsetting-item" bindtap="changeTosettinginfo">
            <view class="topsetting-item-top">
                <view class="topsetting-item-top-image">
                    <image src="/images/shezhixinxi.png"></image>
                </view>
            </view>
            <view class="topsetting-item-bottom">
                <text>设置信息</text>
            </view>
        </view>
        <view class="topsetting-item" bindtap="changeTodefenceareasetting">
            <view class="topsetting-item-top">
                <view class="topsetting-item-top-image">
                    <image src="/images/fangqushezhi.png"></image>
                </view>
            </view>
            <view class="topsetting-item-bottom">
                <text>防区设置</text>
            </view>
        </view>
        <view class="topsetting-item" bindtap="changeTofortifytime">
            <view class="topsetting-item-top">
                <view class="topsetting-item-top-image">
                    <image src="/images/shefangshijian.png"></image>
                </view>
            </view>
            <view class="topsetting-item-bottom">
                <text>设防时间</text>
            </view>
        </view>
        <view class="topsetting-item">
            <view class="topsetting-item-top">
                <view class="topsetting-item-top-image">
                    <image src="/images/chakanzhibo.png"></image>
                </view>
            </view>
            <view class="topsetting-item-bottom">
                <text>查看直播</text>
            </view>
        </view>

    </view>
    <view class="equipinfo">
        <view class="equipinfo-item-first">
            <text>设备信息</text>
        </view>
        <view class="equipinfo-item">
            <view class="equipinfo-item-left">
                <text>设备</text>
            </view>
            <view class="equipinfo-item-right">
                <text>{{ detail.equip }}</text>
            </view>
        </view>
        <view class="equipinfo-item">
            <view class="equipinfo-item-left">
                <text>报警类型</text>
            </view>
            <view class="equipinfo-item-right">
                <text>{{ detail.alarmtype }}</text>
            </view>
        </view>
        <view class="equipinfo-item">
            <view class="equipinfo-item-left">
                <text>所在位置</text>
            </view>
            <view class="equipinfo-item-right">
                <text>{{ detail.address }}</text>
            </view>
        </view>
        <view class="equipinfo-item">
            <view class="equipinfo-item-left">
                <text>最后报警时间</text>
            </view>
            <view class="equipinfo-item-right">
                <text>{{ detail.alarmtime }}</text>
            </view>
        </view>
        <view class="equipinfo-item">
            <view class="equipinfo-item-left">
                <text>防区设置</text>
            </view>
            <view class="equipinfo-item-right">
                <text>{{ detail.defenceareasetting }}个</text>
            </view>
        </view>
        <view class="equipinfo-item">
            <view class="equipinfo-item-left">
                <text>设防时间</text>
            </view>
            <view class="equipinfo-item-right">
                <text>{{ detail.fortifytime }}段</text>
            </view>
        </view>
        <view class="equipinfo-item">
            <view class="equipinfo-item-left">
                <text>上次心跳</text>
            </view>
            <view class="equipinfo-item-right">
                <text>{{ detail.lastheart }}</text>
            </view>
        </view>
        <view class="equipinfo-item">
            <view class="equipinfo-item-left">
                <text>设备温度</text>
            </view>
            <view class="equipinfo-item-right">
                <text wx:if="{{detail.equiptemp > 50}}" style="color: #df1737">{{ detail.equiptemp }}℃</text>
                <text wx:else style="color: #00a0e9">{{ detail.equiptemp }}℃</text>
            </view>
        </view>
        <view class="equipinfo-item-last">
            <view class="equipinfo-item-last-btn">
                <button class="weui-btn">设备闪灯</button>
            </view>
        </view>
    </view>
    <view class="camera">
        <view class="equipinfo-item-first">
            <text>摄像头信息</text>
        </view>
        <view class="camera-item">
            <view class="camera-item-left">
                <text>设备IP</text>
            </view>
            <view class="camera-item-right">
                <text wx:if="{{ detail.equipIP !== '' }}">{{ detail.equipIP }}</text>
                <text wx:else>未设定</text>
            </view>
        </view>
        <view class="camera-item">
            <view class="camera-item-left">
                <text>设备端口</text>
            </view>
            <view class="camera-item-right">
                <text wx:if="{{ detail.port !== '' }}">{{ detail.port }}</text>
                <text wx:else>无</text>
            </view>
        </view>
        <view class="camera-item">
            <view class="camera-item-left">
                <text>设备状态</text>
            </view>
            <view class="camera-item-right">
                <text wx:if="{{ detail.equipstate == 0 }}">设备离线</text>
                <text wx:else style="color: #00a0e9">运行中</text>
            </view>
        </view>
        <view class="camera-item">
            <view class="camera-item-left">
                <text>设备软件版本</text>
            </view>
            <view class="camera-item-right">
                <text>{{ detail.softversion }}</text>
            </view>
        </view>
        <view class="camera-item">
            <view class="camera-item-left">
                <text>设备硬件版本</text>
            </view>
            <view class="camera-item-right">
                <text>{{ detail.hardversion }}</text>
            </view>
        </view>
        <view class="camera-item">
            <view class="camera-item-left">
                <text>升级时间</text>
            </view>
            <view class="camera-item-right">
                <text>{{ detail.upgradetime }}</text>
            </view>
        </view>
        <view class="camera-item">
            <view class="camera-item-left">
                <text>登录时间</text>
            </view>
            <view class="camera-item-right">
                <text>{{ detail.logintime }}</text>
            </view>
        </view>
        <view class="camera-item">
            <view class="camera-item-left">
                <text>当前状态</text>
            </view>
            <view class="camera-item-right">
                <text wx:if="{{ detail.currentstate === 1 }}">正常</text>
                <text wx:else>未工作</text>
            </view>
        </view>
    </view>

</view>
