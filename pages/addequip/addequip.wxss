/* pages/equip/equip.wxss */
page{
    line-height: 1.6;
    font-family: -apple-system-font, "Helvetica Neue", sans-serif;
    height: 100%;
}
.page{
    height: 100%;
    background-color: #e7e7e7;

}
.page-addequip-input{
    align-items: center;
    display: flex;
    flex-direction: column;
    font-size: 16px;
}
.page-addequip-button{
    height: 65px;
    background-color: orange;
}
.addequip-input{
    height: 340rpx;
    background-color: #fff;
    width: 94%;
    border-radius: 12px;
    align-items: center;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
}
.view-input{
    border: 1px #ececec solid;
    border-radius: 12px;
    width: 80%;
}