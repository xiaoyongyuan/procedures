/* pages/business/business.wxss */
page {
    line-height: 1.6;
    font-family: -apple-system-font, "Helvetica Neue", sans-serif;
    height: 100%;
}
.page{
    height: 100%;
    background-color: #e7e7e7;
}
.banner{
    height: 380rpx;
    width: 100%;
}
.banner-img{
    height: 100%;
    width: 100%;
}
.buiness-all{
    margin-top: 36rpx;
    height: 222rpx;
    width: 100%;
}
.buiness-item{
    width: 222rpx;
    float: left;
    height: 100%;
    background-color: white;
    border-radius: 24rpx;
    margin-left: 2.8%;
}
.buiness-item-top{
    width: 100%;
    height: 65%;
    display: flex;
    align-items: flex-end;
    justify-content: center;
}
.buiness-item-bottom{
    display: flex;
    justify-content: center;
    width: 100%;
    height: 35%;
}
.buiness-item-top-image{
    width: 100rpx;
    height: 120rpx;
}
.buiness-item-top-image image{
    width: 100%;
    height: 100%;
}
.buiness-item-bottom text{
    font-size: 26rpx;
}