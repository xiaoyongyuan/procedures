page{
    line-height: 1.6;
    font-family: -apple-system-font, "Helvetica Neue", sans-serif;
    height: 100%;
}
.page{
    height: 100%;
}

.page-addequip-button{
    position: absolute;
    top: 700rpx;
    align-items: center;
    display: flex;
    flex-direction: column;
    font-size: 24rpx;
    width: 100%;
}
.addequip-weui-btn{
    width: 90%;
}
.weui-btn{
    background-color: #00a0e9;
    color: white;
    border-radius: 24rpx;
    font-size: 36rpx;
}

.PC{
    width: 100%;
    height: 260rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}
.PC-image{
    width: 50%;
    height: 100%;
}
.PC-image image{
    width: 100%;
    height: 100%;
}
.confirm-word{
    display: flex;
    justify-content: center;
    position: absolute;
    top: 550rpx;
    width: 100%;
}
.confirm-word text{
    font-size: 26rpx;
}